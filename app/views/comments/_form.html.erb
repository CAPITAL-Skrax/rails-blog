<div class="row">
  <div class="col-md-12">    
    <%= form_for([@article, @article.comments.build]) do |f| %>

      <div class="field">
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>